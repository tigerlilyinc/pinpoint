base = #141414
primary = #770feb
secondary = #3e18d4
accent-1 = #ac0ee0
accent-2 = #0f1eeb
accent-3 = #0e54e0
text = #888888

body
  font-family: "promixa-nova", Helvetica, Arial, Verdana, sans-serif;
  font-size: 12px;
  letter-spacing: 0;
  line-height: 1.5em;
  background-color: white
  color: text
  font-weight: 300;
  font-style: normal;

h1, h2, h3, h4, h5, h6, h7, .cronos
  font-family "cronos-pro-subhead"
  font-weight 300

a
  color: text
  text-decoration: none;
  outline: none;

.top-nav
  height 48px
  border-bottom 2px solid #87909d
  box-shadow 0 8px 9px -6px #87909d
  line-height 48px
  font-size 20px
  text-transform uppercase
  a
    color #6c81bd

.info-box
  float left
  padding 100px
  border 1px solid #474d5a
  border-radius 14px
  cursor pointer

.info-box:hover
  background-color #f5fafd

